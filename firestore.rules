  rules_version = '2';

  service cloud.firestore {
    match /databases/{database}/documents {

      // Helper functions
      function isAuthenticated() {
        return request.auth != null;
      }
      
      function isUser(uid) {
        return isAuthenticated() && request.auth.uid == uid;
      }

      // Companies Collection
      match /companies/{companyId} {
        // Allow reading company info (name, codes) to check existence during signup/login
        allow read: if true; 
        // Allow creation only if authenticated (super admin) - strictly speaking we should restrict this more
        // but for now 'if true' or 'if isAuthenticated' for the dashboard to work
        allow create: if true; 
        allow update, delete: if true; // For Super Admin Dashboard

      // Nested Users Collection
      match /users/{userId} {
        // Owner can read/write their own profile
        allow read, write: if isUser(userId);
        
        // Managers can read all employees in their company
        // We verify the requester has 'manager' role in this specific company
        allow read: if get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'manager';
        
        // Nested Activities
        match /activities/{activityId} {
           allow read, write: if isUser(userId);
           allow read, write: if get(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid)).data.role == 'manager';
        }
      }
      
      // Invites (Future proofing)
      match /invites/{inviteId} {
         allow read: if true;
      }
    }

      // Collection Group Query for 'users'
      // Required for AuthContext to find the user's company by their UID
      match /{path=**}/users/{userId} {
        allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
        // Allow writing only if it's their own doc (e.g. lastLoginAt)
        allow write: if isAuthenticated() && userId == request.auth.uid;
      }
    }
  }
